<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMine">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Item 1 -->
            <!--item的上分割线-->
            <View
                android:id="@+id/divider_top1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />

            <!--item内容部分的容器-->
            <LinearLayout
                android:id="@+id/ll_root1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <!--item中间部分的文字-->
                <TextView
                    android:id="@+id/tv_text_content1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="设置"/>

            </LinearLayout>
        <!-- TODO: Item 2 -->
            <!--item的下分割线-->
            <View
                android:id="@+id/divider_bottom1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
            <View
                android:id="@+id/divider_top2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />

            <!--item内容部分的容器-->
            <LinearLayout
                android:id="@+id/ll_root2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <!--item中间部分的文字-->
                <TextView
                    android:id="@+id/tv_text_content2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="关于我们"/>

            </LinearLayout>
            <!--item的下分割线-->
            <View
                android:id="@+id/divider_bottom2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!-- TODO: Item 3 -->
            <View
                android:id="@+id/divider_top3"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />

            <!--item内容部分的容器-->
            <LinearLayout
                android:id="@+id/ll_root3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
