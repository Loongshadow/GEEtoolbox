<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notebook2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:windowSoftInputMode="adjustResize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBaseline_toBaselineOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/back2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_left"
                android:gravity="center"
                android:text=""

                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/search2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:background="@drawable/button_search"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/textEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:alpha="0.5"
                android:background="#00000000"
                android:gravity="center"
                android:hint="搜索笔记"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:background="#00FFFFFF"
                android:text="···"
                android:textColor="@color/white"
                android:textSize="40dp"
                tools:ignore="DuplicateIds" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_left"
                android:gravity="bottom"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/chooseNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:background="#00000000"
                android:gravity="center"
                android:text="选择了0个"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/mulselect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#00000000"
                android:text="合并"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.3"
                android:background="#00FFFFFF"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/back3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_left"
                android:gravity="bottom"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:text="记事本"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_search"
                android:gravity="center|left"
                android:text="" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.3"
                android:background="#00FFFFFF"
                android:text="···"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"

            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/undoplan"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="1"
                android:background="@drawable/undoplan"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/diary"
                app:layout_constraintEnd_toStartOf="@+id/diary"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/countdownday"
                android:layout_width="62dp"
                android:layout_height="64dp"
                android:layout_marginStart="90dp"
                android:layout_weight="1"
                android:background="@drawable/countdownday"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/diary"
                app:layout_constraintStart_toEndOf="@+id/diary"
                app:layout_constraintTop_toTopOf="@+id/diary" />

            <Button
                android:id="@+id/diary"

                android:layout_width="55dp"
                android:layout_height="60dp"

                android:layout_weight="1"
                android:background="@drawable/diary"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.282" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_marginTop="60dp"
                android:text="未完事项"
                app:layout_constraintEnd_toEndOf="@+id/undoplan"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/undoplan"
                app:layout_constraintTop_toTopOf="@+id/undoplan" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="日记"
                app:layout_constraintEnd_toEndOf="@+id/diary"
                app:layout_constraintStart_toStartOf="@+id/diary"
                app:layout_constraintTop_toBottomOf="@+id/diary" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="倒数日"
                app:layout_constraintEnd_toEndOf="@+id/countdownday"
                app:layout_constraintStart_toStartOf="@+id/countdownday"
                app:layout_constraintTop_toBottomOf="@+id/countdownday" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <Button
                android:id="@+id/newnote"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_newnote"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@color/gray"
                android:contentDescription="@string/app_name"
                android:fillViewport="true"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/container_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

